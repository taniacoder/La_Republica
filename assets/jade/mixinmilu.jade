mixin noticia(logo, imagen, texto, texto1, texto2, texto3, enlace)
    .box
        img.logo(src=logo, alt="")
        .row
            .col-md-5
                img.image-width.borde-gris(src=imagen, alt="")
            .col-md-7
                a(href="#")=texto
        .row
            .col-md-5
                img.image-width(src=imagen, alt="")
            .col-md-7
                a(href="#")=texto1
        .row
            .col-md-5
                img.image-width(src=imagen, alt="")
            .col-md-7
                a(href="#")=texto2
        .row
            .col-md-5
                img.image-width(src=imagen, alt="")
            .col-md-7
                a(href="#")=texto3
        p.text-center Más en 
            a(href="#")= enlace
        hr(width=" 150px")
mixin blog(texto)
    .row
        .col-md-3.col-sm-4.col-xs-4
            .box-sombra
                img.thumbnail.image-width(src="./assets/image/img_blogueros.jpg", alt="")
        .col-md-9.col-sm-8.col-xs-8.blog-texto
            p Augusto Álvarez Rodrich
            p=texto
mixin columnista(image, nombre, texto)
    .text-center
        .box-sombra
            img.thumbnail(src=image, alt="")
        a(href="#")=nombre
        p 
            strong= texto
