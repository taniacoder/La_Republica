mixin redes
    a(href="#")
        img.red(src="./assets/image/s-icons/facebook.png", alt="")
    a(href="#")
        img.red(src="./assets/image/s-icons/twitter.png", alt="")
    a(href="#")
        img.red(src="./assets/image/s-icons/g-plus.png", alt="")
mixin enlace(numero, nombre)
    +redes
    img.point(src="./assets/image/bullet.gif", alt="")
    img.ico-comment(src="./assets/image/ico_comment.png", alt="")
    a.t-small(href="#")= numero
    img.point(src="./assets/image/bullet.gif", alt="")
    a.t-small(href="#")= nombre
mixin emma
    p.small Hace 1 hora 12 mins
    a.subtitle(href="#") Emma Watson protagonizará 'La bella y la bestia' | VIDEO
    .row.last-news
        .col-md-4.col-sm-4.col-xs-12
            img.image-width(src="./assets/image/img_news.jpg", alt="")
        .col-md-8.col-sm-8.col-xs-12
            p La actriz Emma Watson fue confirmada por Disney como la protagonista de 'La bella y la bestia' con la versión de carne y hueso.
            +enlace("10", "ESPECTÁCULOS")
            img.point(src="./assets/image/bullet.gif", alt="")
            a.icon(href="#")
                i.fa.fa-youtube-play
    hr(width="100%")
